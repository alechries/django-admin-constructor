# .env

# Django Settings

# Secret Key for Django (keep this secret!)
SECRET_KEY=your-very-secret-key-here

# Debug mode (True or False)
DEBUG=True

# Allowed Hosts (list of domains or IPs that can serve your app)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.yourdomain.com

# Database Settings
# Options: sqlite3, postgresql, mysql
DB_ENGINE=django.db.backends.postgresql  # Or 'django.db.backends.sqlite3' for SQLite, or 'django.db.backends.mysql' for MySQL
DB_NAME=your_database_name
DB_USER=your_database_user    # (Only for PostgreSQL/MySQL)
DB_PASSWORD=your_database_password  # (Only for PostgreSQL/MySQL)
DB_HOST=localhost             # (Only for PostgreSQL/MySQL)
DB_PORT=5432                 # (Default port for PostgreSQL, change for MySQL)
# For SQLite, you would use a file path instead of the DB_USER, DB_PASSWORD, DB_HOST, DB_PORT.
# Example for SQLite:
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=sqlite:///db.sqlite3  # Or use an absolute path, e.g. /path/to/your/db.sqlite3

# Email Settings (For sending emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password

# Custom settings for your project (e.g., custom API keys, etc.)
CUSTOM_API_KEY=your-custom-api-key-here
